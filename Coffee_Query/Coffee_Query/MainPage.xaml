<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coffee_Query.MainPage"
             BackgroundImageSource="Background.jpg">

    <NavigationPage.TitleView>
        <Label Text="Coffe Queuer" TextColor="White" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>


    <StackLayout Margin="20" VerticalOptions="Fill" x:Name="PageContent" HorizontalOptions="CenterAndExpand">

        <Button Text="ADD " Margin="30" HeightRequest="100" Font="Bold" FontSize="50" Clicked="OnAdd" />

        <Button Text="REMOVE" Margin="30" HeightRequest="100" Font="Bold" FontSize="50" Clicked="OnRemove"/>

    </StackLayout>

</ContentPage>
